{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "lib": ["DOM", "ES2022"],
    "allowJs": true,
    "checkJs": false,               // ★ 全体はオフ（ファイル単位 @ts-check でオンにする）
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "types": []
  },
  "include": ["**/*.js", "**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
